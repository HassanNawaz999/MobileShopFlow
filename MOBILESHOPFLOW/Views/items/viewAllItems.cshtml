@model IEnumerable<MOBILESHOPFLOW.Models.TblItem>

@{
    ViewData["Title"] = "viewAllItems";
}

<h2>List Of Items<span class="badge-danger" id="Carscounter"></span></h2>
<div id="ad">

</div>
<p>
    <a href="/items/addItem">Add New</a>
</p>
<table class="table table-responsive" id="tblallItems" name="tblCatagories">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatagoryId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (TblItem ti in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(model => ti.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => ti.Discription)
                </td>
                <td>
                    @Html.DisplayFor(model => ti.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(model => ti.Price)
                </td>
                <td>
                    @Html.DisplayFor(model => ti.Image)
                </td>
                <td>
                    @Html.DisplayFor(model => ti.Model)
                </td>
                <td>
                    @Html.DisplayFor(model => ti.Color)
                </td>
                <td>
                    @Html.DisplayFor(model => ti.CatagoryId)
                </td>
                <td>
                    <a href="/items/removeItem?ItemId=@ti.ItemId" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                    <a href="/items/itemDetails?id=@ti.ItemId" class="btn btn-success btn-xs"><span class="glyphicon-eye-open">Details</span></a>
                        <a href="/items/EditItem?iid=@ti.ItemId" class="btn btn-success btn-xs"><span class="glyphicon-pencil">Edit</span></a>

                      @*  <a href="#" class="btn btn-danger dlt" data-id="@tc.EngineNo">Delete Ajax</a>*@



                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblallItems').DataTable();
        });
    </script>

}
