<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MOBILESHOPFLOW</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
     
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link href="~/lib/datatable/jquery.dataTables.min.css" rel="stylesheet" />
       
    </environment>
</head>
<body background="https://cnet4.cbsistatic.com/img/crZVGcs5CdS31BWSmmOasNZx5WQ=/1600x900/2017/09/12/a0da0dba-46ab-4207-b9b4-305dc5b9bfad/apple-091217-iphone-x-4125.jpg">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">MOBILESHOPFLOW</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Sales<span class="badge-danger" id="SaleCounter"></span> <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/sales/SaleItem">Sale New Item</a></li>
                            <li><a href="/sales/SaleHistory">Sale History</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Purchase<span class="badge-danger" id="purchaseCount"></span> <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/purchase/purchaseNewQuantity">Purchae New Quantity</a></li>
                            <li><a href="/purchase/purchaseHistory">Purchase History</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Total Users<span class="badge-danger" id="usercounter"></span> <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/Registration/register">Add New User</a></li>
                            <li><a href="/Registration/viewAllUsers">Users List</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Total Vendors<span id="idvendor"></span> <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/Vendors/addVendor">Add New Vendor</a></li>
                            <li><a href="/Vendors/viewAllVendors">Vendors List</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Total Cusomers <span class="badge-danger" id="customercounter"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/Customer/addCustomer">Add New Customers</a></li>
                            <li><a href="/Customer/viewAllCustomers">Customers List</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Total Catagories <span id="countCatagory"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/Catagories/catagories">Add New Catagories</a></li>
                            <li><a href="/Catagories/viewAllCatagories">All Catagories</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Total Items <span id="itemcounter"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/items/addItem">Add New Item</a></li>
                            <li><a href="/items/viewAllItems">Items List</a></li>
                        </ul>
                    </li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
       
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/datatable/jquery.dataTables.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/datatable/jquery.dataTables.min.js"></script>
       
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)

 
    <footer>
        <p class="col-md-offset-1">&copy; 2017 - MOBILESHOPFLOW Copyrights are reserverd.</p>
    </footer>
</body>
</html>

@section Scripts
    {
    <script>

        $(function () {
            //  $('#ad').load('/DataBase/ShowAd');
            $('#purchaseCount').load('/Purchase/countPurchase');
            $('#usercounter').load('/registration/userCount');
            $('#idvendor').load('/Vendors/countVendor');
            $('#customercounter').load('/Customer/countCustomers');
            $('#countCatagory').load('/First/countCatagory');
            $('#itemcounter').load('/First/countItems');
            $('#SaleCounter').load('/Sales/CountSale');
        });
    </script>
}
