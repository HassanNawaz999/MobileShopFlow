@model IEnumerable<MOBILESHOPFLOW.Models.TblCustomer>

@{
    ViewData["Title"] = "viewAllCustomers";
}

<h2>ViewAllCustomers<span class="badge-danger" id="Carscounter"></span></h2>
<div id="ad">

</div>
<p>
    <a href="/customer/addCustomer">Add New</a>
</p>
<table class="table table-responsive" id="tblAllCusotmer" name="tblAllCusotmer">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (TblCustomer tc in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(model => tc.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => tc.Phone)
                </td>

                <td>
                    <a href="/Customer/removeCusotmer?Cusotmer_id=@tc.Cusotmer_id" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                    <a href="/Customer/customerDetail?cnum=@tc.Cusotmer_id" class="btn btn-success btn-xs"><span class="glyphicon-eye-open">Details</span></a>
                    <a href="/Customer/EditCustomer?cid=@tc.Cusotmer_id" class="btn btn-success btn-xs"><span class="glyphicon-pencil">Edit</span></a>

                    @*  <a href="#" class="btn btn-danger dlt" data-id="@tc.EngineNo">Delete Ajax</a>*@



                </td>
            </tr>
        }
    </tbody>
</table>
