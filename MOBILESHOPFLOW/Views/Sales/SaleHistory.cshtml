@model IEnumerable<MOBILESHOPFLOW.Models.TblSales>

@{
    ViewData["Title"] = "SaleHistory";
}

<h2>SaleHistory<span class="badge-danger" id="SaleCounter"></span></h2>
<p>
    <a href="/Sales/SaleItem">Sale New Item</a>
</p>
<table class="table table-responsive" id="tblallItems" name="tblCatagories">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (TblSales ts in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(model => ts.ItemId)
                </td>
                <td>
                    @Html.DisplayFor(model => ts.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(model => ts.Price)
                </td>
                <td>
                    @Html.DisplayFor(model => ts.Date)
                </td>
               
                <td>
                    <a href="/items/removeItem?ItemId=@ts.SaleId" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                    <a href="/items/itemDetails?id=@ts.SaleId" class="btn btn-success btn-xs"><span class="glyphicon-eye-open">Details</span></a>
                    <a href="/items/EditView" class="btn btn-success btn-xs"><span class="glyphicon-pencil">Edit</span></a>

                    @*  <a href="#" class="btn btn-danger dlt" data-id="@tc.EngineNo">Delete Ajax</a>*@



                </td>
            </tr>
        }
    </tbody>
</table>
